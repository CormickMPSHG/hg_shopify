<div id="customer-wrapper">
  <div class="sidenav">
    <ul>
        {% for link in linklists.["account"].links %}
            <li>{{ link.title | link_to: link.url }}</li>
        {% endfor %}
    </ul>
  </div>
 <div class="customer-info">
    <div class="collection-description" style="margin-bottom: 20px; padding-bottom: 20px; border-bottom: 1px solid {{ settings.dotted_color }}">
		<h1>{{ page.title }}</h1>
	</div>
  
	<div id="page-content" class="twelve columns omega"> 
		{{ page.content }}
	</div>
</div><!--customer-info-->
</div><!--customer-wrapper-->


<script type="text/javascript" charset="utf-8">
$(document).ready(function(e) {
	$("img").addClass("scale-with-grid"); 

	$('#dropdown').on('click',function(){
		$('.dropdownwrap').slideToggle();
	});
});
</script>