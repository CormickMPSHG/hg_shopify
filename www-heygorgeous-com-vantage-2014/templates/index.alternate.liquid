<div class="clear"></div>


{% if settings.promo %}
<div class="row">
    <div id="leftpromo" class="one-third column alpha">
        <a href="{{ settings.leftlink }}"><img src="{{ 'leftpromo.jpg' | asset_url }}" alt="{{ settings.promo1_alt }}" style="border: 0;" class="scale-with-grid"/></a>
    </div>
    
    <div id="midpromo" class="one-third column">
        <a href="{{ settings.midlink }}"><img src="{{ 'midpromo.jpg' | asset_url }}" alt="{{ settings.promo2_alt }}" style="border: 0;" class="scale-with-grid"/></a>
    </div>
    
    <div id="rightpromo" class="one-third column omega">         
        <a href="{{ settings.rightlink }}"><img src="{{ 'rightpromo.jpg' | asset_url }}" alt="{{ settings.promo3_alt }}" style="border: 0;" class="scale-with-grid"/></a>
    </div>
</div>
{% endif %}

{% if settings.frontpage-text-area %}
<hr>
    <div class="row">
    <h1>{{ pages.frontpage.title }}</h1>
    <p>
    {{ pages.frontpage.content }}</p>
    </div>
<hr>
{% endif %}

<div class="clear"></div>

{% if settings.show-instagram-feed %}    
{% assign url = '{{image}}' %}
{% assign caption = '{{caption}}' %}
<div id="instagram-card" class="row">
  <div class="section-title lines"><h4><a href="http://instagram.com/{{ settings.instagram_name }}" target="_blank">Follow @{{ settings.instagram_name }}</a> on Instagram</h4></div>  
  <div id="instafeed"></div>
  <script type="text/javascript">
    var userFeed = new Instafeed({
      get: 'user',
      userId: {{ settings.instagram-user-id }},
      accessToken: '{{ settings.instagram-access-token }}',
      template: '<a class="fancybox two columns padded" href="{{url}}" rel="ig" title="{{ caption }}"><img class="instagram-image scale-with-grid" src="{{ url }}" /></a>'
    });
    userFeed.run();        
  </script>
</div>
{% endif %}  



